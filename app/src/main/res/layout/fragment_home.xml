    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/boastButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_group_4"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/black"
                ></ImageButton>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="자랑하기"
android:textStyle="bold"
    android:fontFamily="@font/ham"
android:layout_alignBottom="@+id/boastButton"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/dp_7"
    android:textColor="@color/black"
    ></TextView>
            <ImageButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_group_5_copy"

                android:adjustViewBounds="true"

                android:layout_marginTop="@dimen/dp_30"
                android:layout_alignParentRight="true"

                ></ImageButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageButton
                android:id="@+id/popfairyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_group_3"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                >

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인기동화"
                android:textStyle="bold"
                android:fontFamily="@font/ham"
                android:layout_alignBottom="@+id/popfairyButton"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_7"
                android:id="@+id/text11"
                android:textColor="@color/black"
                ></TextView>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_alignParentRight="true"
android:layout_marginTop="@dimen/dp_80"
                android:background="@drawable/ic_group_6"

                ></ImageButton>




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >

            <ImageButton
                android:id="@+id/fairyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_group_3"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dp_80"


                ></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자랑하기"
                android:textStyle="bold"
                android:fontFamily="@font/ham"
                android:layout_alignBottom="@+id/fairyButton"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_7"
                android:textColor="@color/black"
                ></TextView>
        </RelativeLayout>


    </LinearLayout>


</FrameLayout>