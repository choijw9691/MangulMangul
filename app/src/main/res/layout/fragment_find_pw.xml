<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.FindIdFragment"
    android:orientation="vertical"
    android:background="@drawable/backgroundimg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="horizontal">
        <Button
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@drawable/ic_icon_left_gray_8"
            android:layout_centerVertical="true"
            android:id="@+id/backbtn"
            ></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="비밀번호 찾기"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>
    <EditText
        android:layout_width="600dp"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/editradius"
        android:hint="이메일"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_gravity="center"
        android:fontFamily="@font/ham"
        ></EditText>
    <Button
        android:layout_width="@dimen/dp_400"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:elevation="2dp"
        android:text="임시 비밀번호 발송"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:background="@drawable/radiusbutton"
        android:backgroundTint="#ff6b6b"
        android:textStyle="bold"
        android:fontFamily="@font/ham"
        ></Button>

</LinearLayout>