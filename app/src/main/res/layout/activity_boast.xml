<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".boast.boastActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_group_12_copy_2"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"></View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageButton
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/ic_icon_left_gray_8"
            android:id="@+id/backbtn"
      android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="@dimen/dp_10"
            ></ImageButton>






    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"></View>

    <FrameLayout
        android:id="@+id/boastContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">


    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="2"
        android:id="@+id/boastRecycler"
        ></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>