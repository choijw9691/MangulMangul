<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundimg"
    tools:ignore="ButtonStyle,HardcodedText, ContentDescription, SmallSp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="horizontal">
        <Button
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@drawable/ic_icon_left_gray_8"
            android:layout_centerVertical="true"
            android:id="@+id/backbtn"
            ></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lin1"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dp_10"
android:paddingTop="@dimen/dp_20"
        >

        <EditText
            android:id="@+id/userName"
            android:layout_width="600dp"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/editradius"
            android:hint="이름"
            android:layout_centerInParent="true"

            android:paddingLeft="@dimen/dp_20"
            android:fontFamily="@font/ham"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:imeOptions="flagNoExtractUi"
            android:enabled="false"

            />
        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            >
            <EditText
                android:id="@+id/userRoleMno"
                android:layout_width="@dimen/dp_400"
                android:layout_height="match_parent"
                android:background="@drawable/editradius"
                android:hint="아이디"
                android:fontFamily="@font/ham"

                android:paddingLeft="@dimen/dp_20"
                android:imeOptions="flagNoExtractUi"
                android:layout_marginRight="@dimen/dp_40"
                />

            <Button
                android:id="@+id/check_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="중복확인"

                android:background="@drawable/action_button"
                android:textColor="#ff6b6b"
                android:textStyle="bold"
                android:fontFamily="@font/ham"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40"
                ></Button>
        </LinearLayout>


        <EditText
            android:id="@+id/password"
            android:layout_width="600dp"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/editradius"
            android:hint="비밀번호"
            android:layout_centerInParent="true"

            android:paddingLeft="@dimen/dp_20"
            android:fontFamily="@font/ham"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:imeOptions="flagNoExtractUi"
            android:enabled="false"

            />


        <EditText
            android:id="@+id/pw_check"
            android:layout_width="600dp"
            android:layout_height="@dimen/dp_50"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/editradius"
            android:fontFamily="@font/ham"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:imeOptions="flagNoExtractUi"

            android:paddingLeft="@dimen/dp_20"
            android:enabled="false"
            />

        <Button
            android:layout_width="@dimen/dp_400"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"

            android:onClick="onclick"
            android:text="다음"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
android:background="@drawable/redbutton"
            android:id="@+id/next_btn"
            android:textStyle="bold"
            android:fontFamily="@font/ham"
            >

        </Button>



    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/lin2"
        >


        <EditText
            android:id="@+id/nickname"
            android:layout_width="600dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/editradius"
            android:hint="닉네임"
            android:layout_centerInParent="true"

            android:paddingLeft="@dimen/dp_20"
            android:fontFamily="@font/ham"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:imeOptions="flagNoExtractUi"
            />
        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"

            >

            <EditText
                android:id="@+id/address1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:imeOptions="flagNoExtractUi"
                android:background="@drawable/editradius"
                android:fontFamily="@font/ham"
                android:hint="주소"
android:layout_weight="7"

                android:paddingLeft="@dimen/dp_20" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></View>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="주소검색"
                android:layout_weight="1.5"
                android:background="@drawable/radiusbutton"
                android:textColor="#ff6b6b"
                android:textStyle="bold"
                android:fontFamily="@font/ham"



                android:id="@+id/check_adr"
                ></Button>
        </LinearLayout>


        <EditText
            android:id="@+id/address2"
            android:layout_width="600dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/editradius"
            android:hint="상세주소"
            android:layout_centerInParent="true"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:paddingLeft="@dimen/dp_20"
            android:fontFamily="@font/ham"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center"
            android:imeOptions="flagNoExtractUi"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="600dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/editradius"
            android:hint="이메일"
            android:layout_centerInParent="true"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:paddingLeft="@dimen/dp_20"
            android:fontFamily="@font/ham"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center"
            android:imeOptions="flagNoExtractUi"
            />


        <Button
            android:id="@+id/sign_btn"
            android:layout_width="@dimen/dp_400"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_25"
            android:elevation="2dp"
            android:onClick="onclick"
            android:text="다음"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:background="@drawable/redbutton"
            android:backgroundTint="#ff6b6b"
            android:textStyle="bold"
            android:fontFamily="@font/ham"/>
<View
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_0"
    android:layout_weight="0.3"
    ></View>

    </LinearLayout>






</LinearLayout>